{
  "rules": {
    «block-no-empty»: null,
    «color-no-invalid-hex»: true,
    "comment-empty-line-before": ["always", {
      "ignore": ["stylelint-commands", "after-comment"]
    }],
    «Объявление-двоеточие-пробел-после»: «всегда»,
    «Объявление-не-важно»: true,
    «отступ»: [2, {
      "ignore": ["in-parens"]
    }],
    «max-empty-lines»: 2,
    "rule-empty-line-before": ["always", {
      "except": ["first-nested"],
      "игнорировать": ["after-comment"]
    }],
    «unit-whitelist»: [«em», «rem», «%», «px», «vh», «vw», «dpi», «dppx», «pt», «deg», «s», , "Миз"]
  }
}